<?xml version="1.0" ?>
<launch>

  <!-- Start SLAM -->
  <include file="$(find otter_slam)/launch/otter.launch">
    <arg name="rviz" value="false" />
  </include>

  <!-- Map inflating -->
  <include file="$(find map_inflating)/launch/map_inflating.launch">
    <arg name="inflating_radius" value="3.0" />
  </include>

  <!-- Navigation node -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find otter_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find otter_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find otter_navigation)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find otter_navigation)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find otter_navigation)/config/base_local_planner_params.yaml" command="load" />
    <param name="base_global_planner" value="navfn/NavfnROS"/>
  </node>

  <!-- Visualize in rviz -->
  <node name="rviz" pkg="rviz" type="rviz" required="true"
        args="-d $(find coverage_boustrophedon)/config/coverage.rviz" />

  <!-- Convert Twist messages to Drive messages -->
  <node pkg="otter_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen" args="--keyboard">
    <remap from="left_cmd" to="left_thrust_cmd"/>
    <remap from="right_cmd" to="right_thrust_cmd"/>
  </node>
</launch>
